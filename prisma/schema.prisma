generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

enum MenopauseStage {
    PERIMENOPAUSE
    MENOPAUSE
    POSTMENOPAUSE
}

enum Intensity {
    MILD
    MODERATE
    SEVERE
}

enum Mood {
    GREAT
    GOOD
    NEUTRAL
    LOW
    BAD
}

model User {
    id String @id @default(cuid())
    email String @unique
    password String
    emailVerified DateTime?
    name String?
    menopauseStage MenopauseStage? @default(PERIMENOPAUSE)
    lastPeriodDate String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    symptoms SymptomEntry[]
    insights Insight[]
    journalEntries JournalEntry[]
}

model SymptomEntry {
    id String @id @default(cuid())
    userId String
    date String
    hotFlashes Int
    nightSweats Int
    moodSwings Int
    sleepIssues Int
    anxiety Int
    fatigue Int
    intensity Intensity @default(MODERATE)
    notes String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user User @relation(fields: [userId], references: [id])

    @@index([userId])
}

model Insight {
    id String @id @default(cuid())
    userId String
    date String
    content String @db.Text
    recommendations String[]
    source String
    associatedSymptoms String[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user User @relation(fields: [userId], references: [id])

    @@index([userId])
}

model JournalEntry {
    id String @id @default(cuid())
    userId String
    date String
    mood Mood @default(NEUTRAL)
    sleep Int
    exercise Boolean?
    diet String[]
    stress Int?
    notes String? @db.Text
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    user User @relation(fields: [userId], references: [id])

    @@index([userId])
}